<%- include('header.ejs') %>
<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/alertify.min.css"/>
<!-- Default theme -->
<link rel="stylesheet" href="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/css/themes/default.min.css"/>
<div class="page-wrapper">
    <div class="page-content">
        <!--breadcrumb-->
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Users</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item"><a href="javascript:;"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Users</li>
                    </ol>
                </nav>
            </div>
          
        </div>
        <!--end breadcrumb-->
        <h6 class="mb-0 text-uppercase">Users</h6>
        <hr/>
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example2" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>S.no</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Contact</th>
                                <th>Wallet</th>
                                <th>Create Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(records.length > 0) {
            
                                records.forEach(function(record,i){ %>
                            <tr>
                                <td><%= i+1 %></td>
                                <td><%= record.name %></td>
                                <td><%= record.email %></td>
                                <td><%= record.contact %></td>
                                <td><%= record.wallet %></td>
                                <td><%= moment(record.created_date).format('MMMM Do YYYY, h:mm:ss a') %></td>
                                <td>
                                    
                                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" onclick="add_amount('<%= record.id %>')" data-bs-whatever="<%= record.id %>">Add Amount</button>
                                   
                                </td>
                            </tr>
                            <%  });

                        } %>
                        </tbody>
                        
                    </table>
                </div>
            </div>
        </div>
    </div>
    
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Enter Amount</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          
            <input type="hidden" name="id" class="form-control" id="recipient-name">
         
          <div class="form-group">
            <label for="message-text" class="col-form-label">Enter Amount:</label>
            <input type="text" class="form-control"name="amount"  id="amount">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" onclick="send_amount()" class="btn btn-primary">Send Amount</button>
      </div>
    </div>
  </div>
</div>

<%- include('footer.ejs') %>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>

<script>
    // function deletedata(id)

    function add_amount(id){
        $('#recipient-name').val(id);
    }

    function send_amount(){
        var id = $('#recipient-name').val();
        var amount = $('#amount').val();

        swal({
            title: "Are you sure want to transfer amount?",
            //text: "Once deleted, you will not be able to recover this imaginary file!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
        .then((willDelete) => {
            if (willDelete) {
            $.post("/transferWallet", {id:id,amount:amount}, function(response, status){
                  
                  if(response == 'success'){
                    alertify.success('Amount Transfered Successfully..!!');
                      location.reload();
                  }
                  else
                  {
                      swal({
                          title: "Please try again",
                          //text: "Once deleted, you will not be able to recover this imaginary file!",
                          icon: "warning",
                          // buttons: true,
                          // dangerMode: true,
                      })
                  }
                      
          });
     
            }
        
    },function(){
        alertify.error('Declined');
    }).set({labels:{ok:'Accept', cancel: 'Decline'}, padding: false});
        
                
    }

    $(document).on('click', '.delete', function() 
    {
        var id = $(this).attr('id');
        //alert(id);
        swal({
            title: "Are you sure want to delete this?",
            //text: "Once deleted, you will not be able to recover this imaginary file!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
        .then((willDelete) => {
            if (willDelete) {
                $.ajax({
                    url: '/deleteCompany',
                    method: "post",
                    data: {id:id},
                    success: function(response) {
                        if(response == 'success'){
                            location.reload();
                        }
                        else
                        {
                            swal({
                                title: "Please try again",
                                //text: "Once deleted, you will not be able to recover this imaginary file!",
                                icon: "warning",
                                // buttons: true,
                                // dangerMode: true,
                            })
                        }
                    }            
                });
            }
        });

    });
</script>